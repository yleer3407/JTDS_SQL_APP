<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/loutSearch"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/btnTestSql"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/btnScan"
            android:padding="10dp"
            android:text="@string/testSQL" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/sys"
            android:padding="10dp" />
        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/btnTestSql"
            android:textColor="#000000" />
    </RelativeLayout>
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/deliver"
        android:background="#ffffff"
        android:scrollbars="vertical"
        android:dividerHeight="20dp"
       />

</LinearLayout>